<!DOCTYPE html>
<html>
  <head>
    <title>PupShare</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <!-- start navbar -->
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to 'Pup Share', root_path, class: 'navbar-brand'  %>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-left">
            <li><%= link_to 'Walk a Pup', jobs_path %>
            <li><%= link_to 'Find a Walker', availabilities_path %>
          </ul>
          <ul class="nav navbar-nav navbar-right"> 
            <% if user_signed_in? %>
            <li><%= link_to 'Profile', user_path(current_user) %>            
            <li><%= link_to 'Upcoming Walks', user_requests_path(current_user, status: 'approved') %>
            <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
            <% else %>
            <li><%= link_to 'Sign In', new_user_session_path %></li>
            <li><%= link_to 'Sign Up', new_user_registration_path %></li>
            <% end %>          
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav> 
    <!-- end navbar -->

    <% if notice.present? %>		
    <p class="alert alert-info"><%= notice %></p>		
    <% end %>		
    <% if alert.present? %>		
    <p class="alert alert-danger"><%= alert %></p>		
    <% end %>

    <div class="row">
      <div class="col-md-1">
      </div>

      <div class="col-md-10">
        <%= yield %>      
      </div>

      <div class="col-md-1">
      </div>     
    </div>

    <br>
    <br>
    <br>

    <div class="navbar navbar-inverse navbar-fixed-bottom" role="navigation">
      <%= link_to 'About', about_path %>
      <%= link_to 'Terms of Service', terms_of_service_path %>
      <%= link_to 'Privacy Policy', privacy_policy_path %>
      <br>
      &copy 2015, etc.
    </div>

  </body>
</html>
