<p id="notice"><%= notice %></p>

<h1>Listing Pups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pups.each do |pup| %>
      <tr>
        <td><%= pup.name %></td>
        <td><%= pup.gender %></td>
        <td><%= pup.age %></td>
        <td><%= link_to 'Show', pup %></td>
        <td><%= link_to 'Edit', edit_pup_path(pup) %></td>
        <td><%= link_to 'Destroy', pup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

